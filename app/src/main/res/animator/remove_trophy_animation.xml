<?xml version="1.0" encoding="utf-8"?>
<set>
	<objectAnimator 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:propertyName="scaleX"
	    android:duration="1000"
	    android:valueFrom=".4"
	    android:valueTo="2" />
	<objectAnimator 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:propertyName="scaleY"
	    android:duration="1000"
	    android:valueFrom=".4"
	    android:valueTo="2" />
	<objectAnimator 
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:propertyName="alpha"
	    android:duration="1000"
	    android:valueFrom="1"
	    android:valueTo="0" />
</set>